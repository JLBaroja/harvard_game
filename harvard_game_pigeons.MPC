\ The Harvard Game (pigeon version)
\ JosÃ© Luis Baroja
\ March 2017

\inputs
^melioration_key=2
^maximization_key=3
^central_key=1

\outputs
^feeder=12
^melioration_light=5
^maximization_light=9
^central_light=1
^chamber_light=14

\variables
\T: session time (sec/100)
\I: trial counter 
\W: hgame temporal window (number of trials that determine state)
\X: counter of responses in maXimization (min at 0, max at W)
\P: probability of reinforcement in each trial
\E: index of array A
\F: index of array B

\arrays
DIM A = 10000 \ Real time events
DIM B = 6000 \ Trial-level events
DIM L = 1 \ Trial time counter
	\ L(0) = RTime from on^central_light til response on that key
	\ L(1) = RTime from on^alternatives til response on any of them

\ Z-pulses
\ Z1: To trial start
\ Z2: To wait for peck from any alternative
\ Z3: To feeder
\ Z4: To next trial
\ Z5: To turn off alternative lights
\ Z6: To trial result

\event key (real Time array)
\T.11: Response in maximization key 
\T.12: Response in central key
\T.13: Response in melioration key
\T.15: Trial start
\T.16: Maximization light ON
\T.17: Central light ON
\T.18: Melioration light ON
\T.19: Feeder ON
\T.21: Maximization light OFF
\T.22: Central light OFF
\T.23: Melioration light OFF
\T.24: Feeder OFF
\T.35: Chamber light ON
\T.36: Chamber light OFF 

\event key (trial array)
\80510.tttt: Chose maximization 
\80530.tttt: Chose melioration
\80690.tttt: Trial rewarded
\80790.tttt: Trial not rewarded
\800X0.tttt: State of the game (that operated in THIS trial)
\80XXXXX.tttt: Scheduled P (given a state AND a choice) 
\70XXXXXX.tttt: Reaction time central light
\60XXXXXX.tttt: Reaction time alternatives
\50XXXXXX.tttt: Time of trial start 



\ Program start; main time counter
S.S.1, 
S1,
#START: on^chamber_light; add E; set A(E-1)=T+.35;
	set W = 6; \ Temporal window
	set X = 3; \ Starting state in the game
	set E = 0; \ Index of array A
	set F = 0; \ Index of array B 
	set I = 0; \ Trial counter
	Z1 ---> S2 \ To first trial

S2,
0.01": add T;
	if T>=6000 [@T,@F]
	@T: ---> STOPABORTFLUSH
	@F: ---> SX



\ Trial start
S.S.2,
S1,
#Z1: add I;
	add F; set B(F-1)=50000000+T+I/1000; \ Record time of trial start
	add F; set B(F-1)=80000+X*10+I/1000; \ Record state that operates in trial
	add E; set A(E-1)=T+.15; SHOW 1, trial, I ---> S2

S2,
3": off^chamber_light; add E; set A(E-1)=T+.36 ---> S3

S3,
2": on^central_light; add E; set A(E-1)=T+.17;
			set L(0)=T  ---> S4

S4,
#R^central_key: off^central_light; add E; set A(E-1)=T+.22; 
					add F; set B(F-1)=70000000+T-L(0)+I/1000; 
		on^melioration_light; add E; set A(E-1)=T+.18;
		on^maximization_light; add E; set A(E-1)=T+.16;	
		set L(1)=T;	
		Z2 ---> SX \ Wait for peck in any lateral key



\ Wait for peck in MELIORATION
S.S.3,
S1,
#Z2: ---> S2

S2,
#R^melioration_key: add F; set B(F-1)=80530+I/1000;
		add F; set B(F-1)=60000000+T-L(1)+I/1000; 
		set P=((1/3)*(X/W))*10000;
		Z5; \ Turn keys off
		if X>0 [@T,@F]
			@T: set X = X-1; Z6 ---> SX
			@F: Z6 ---> SX



\ Wait for peck in MAXIMIZATION
S.S.4,
S1,
#Z2: ---> S2

S2,
#R^maximization_key: add F; set B(F-1)=80510+I/1000;
		add F; set B(F-1)=60000000+T-L(1)+I/1000;
		set P=((1/3)+(1/3)*(X/W))*10000; \ Set probability of reward
		Z5; \ Turn keys off
		if X=W [@T,@F] \ Update X after setting P
			@T: Z6 ---> SX
			@F: add X; Z6 ---> SX



\ Trial result
S.S.5,
S1,
#Z6: add F; set B(F-1)=8000000+P;
	WITHPI=P[@T,@F]
		@T: add F; set B(F-1)=80690+I/1000; Z3 ---> SX \ Feeder
		@F: add F; set B(F-1)=80790+I/1000; Z4 ---> SX \ Next trial



\ Feeder
S.S.6,
S1,
#Z3: on^feeder; add E; set A(E-1)=T+.19 ---> S2

S2,
3": off^feeder; add E; set A(E-1)=T+.24; 
	Z4 ---> SX \ To next trial 



\ Turn keys off
S.S.7,
S1,
#Z5: off^melioration_light;  add E; set A(E-1)=T+.23; 
	off^maximization_light; add E; set A(E-1)=T+.21 ---> SX



\ Next trial 
S.S.8,
S1,
#Z4: ---> S2

S2,
2": on^chamber_light; add E; set A(E-1)=T+.35; Z1 ---> SX \ Start next trial



\ Recording all MAX responses times
S.S.9,
S1,
#R^maximization_key: add E; set A(E-1)=T+.11 ---> SX



\ Recording all MEL responses times
S.S.10,
S1,
#R^melioration_key: add E; set A(E-1)=T+.13 ---> SX 


 
\ Recording all CEN responses times
S.S.11,
S1,
#R^central_key: add E; set A(E-1)=T+.12 ---> SX


